{
  "build": {
    "builder": "NIXPACKS"
  },
  "nixpacks": {
    "phases": {
      "install": {
        "cmds": [
          "cd backend && npm ci",
          "cd frontend && npm ci"
        ]
      },
      "build": {
        "cmds": [
          "npm run build:backend",
          "npm run build:frontend"
        ]
      },
      "start": {
        "cmd": "npm start"
      }
    }
  }
}

